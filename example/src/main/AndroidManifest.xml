<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.list"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:label="@string/app_name"
                 android:theme="@style/Theme.AppCompat">
        <activity
                android:name="MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".HorizontalListActivity" android:label="@string/label_horizontal_list"/>
        <activity android:name=".HorizontalImageListActivity" android:label="@string/label_horizontal_image_list"/>
        <activity android:name=".SingleImageActivity" android:label="@string/label_horizontal_image_list"/>
        <activity android:name=".VerticalListActivity" android:label="@string/label_vertical_list"/>
        <activity android:name=".GridActivity" android:label="@string/label_gridview"/>
    </application>
</manifest> 
